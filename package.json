{
  "name": "organization",
  "version": "1.0.0",
  "description": "Typescript Monorepo Template",
  "repository": "YOUR_REPOSITORY_URL",
  "author": "YOUR_TEAM",
  "license": "MIT",
  "private": true,
  "workspaces": [
    "packages/*",
    "views/*",
    "apps/*",
    "services/*"
  ],
  "scripts": {
    "analyze": "cross-env ANALYZER=true lerna exec webpack-cli --stream --scope",
    "bootstrap": "lerna bootstrap --concurrency 1",
    "build:dev": "cross-env NODE_ENV=development lerna run build --concurrency 1 --stream",
    "build:pr": "lerna run build --concurrency 1 --include-dependencies --stream --since master",
    "build:watch": "cross-env NODE_ENV=development lerna run build:watch --stream --scope",
    "build": "cross-env NODE_ENV=production lerna run build --concurrency 1 --stream",
    "clean": "lerna exec rimraf node_modules && lerna exec rimraf dist && rimraf node_modules",
    "commit": "git-cz",
    "create-generator": "hygen generator new",
    "docs": "lerna run --concurrency 1 docs",
    "format": "prettier --write \"**/*.{ts,tsx}\"",
    "generate": "hygen",
    "lint:fix": "eslint \"**/*.{ts,tsx,js}\" --fix",
    "lint": "eslint \"**/*.{ts,tsx,js}\"",
    "release": "lerna version --conventional-commits -y",
    "postinstall": "yarn bootstrap",
    "start:app": "cross-env lerna run --concurrency 1 start --scope",
    "start:service": "cross-env lerna run --concurrency 1 start:service --stream --scope",
    "test:watch": "cross-env jest --watch",
    "test": "cross-env jest --passWithNoTests --coverage --reporters=default --reporters=jest-junit"
  },
  "devDependencies": {
    "@types/jest": "^26.0.7",
    "@types/node": "^14.0.19",
    "@typescript-eslint/eslint-plugin": "^4.1.1",
    "@typescript-eslint/parser": "^4.1.1",
    "conventional-changelog-cli": "^2.0.34",
    "cross-env": "^7.0.2",
    "eslint": "^7.5.0",
    "eslint-config-prettier": "^6.11.0",
    "eslint-plugin-prettier": "^3.1.4",
    "eslint-plugin-react": "^7.20.3",
    "eslint-plugin-react-hooks": "^4.0.8",
    "git-cz": "^4.7.0",
    "husky": "^4.2.5",
    "hygen": "^6.0.4",
    "jest": "^26.1.0",
    "jest-junit": "^11.1.0",
    "lerna": "^3.22.1",
    "lerna-changelog": "^1.0.1",
    "lint-staged": "^10.2.11",
    "prettier": "^2.0.5",
    "rimraf": "^3.0.2",
    "typedoc": "^0.19.2",
    "typescript": "^4.0.2"
  }
}
